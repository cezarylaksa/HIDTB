{
  "manifest_version": 2,
  "name": "Have I Downloaded This Before?",
  "short_name": "HIDTB",
  "version": "2.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "minimum_chrome_version": "31.0",
  "description": "Keep your downloads folder clean by preventing duplicates.",
  "permissions": [
    "downloads",
    "downloads.open",
    "notifications"
  ],
  "background": {
    "scripts": ["src/have-i-downloaded-this-before.js"],
    "persistent": true
  }
}
